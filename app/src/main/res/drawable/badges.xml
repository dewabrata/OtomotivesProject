<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <gradient
                android:angle="180"
                android:endColor="@color/green_500"
                android:startColor="@color/green_400" />
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />

                <gradient
                    android:angle="180"
                    android:endColor="@color/yellow_400"
                    android:startColor="@color/yellow_500" />
            </shape>
        </clip>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />

                <gradient
                    android:angle="180"
                    android:endColor="@color/green_400"
                    android:startColor="@color/green_500" />
            </shape>
        </clip>
    </item>

</layer-list>