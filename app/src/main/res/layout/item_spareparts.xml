<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="5"
    android:padding="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/txtNamaPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Part"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_80"
                android:textSize="12sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txtNoPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Part"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <TextView
                android:id="@+id/txtMerk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merk"
                android:layout_gravity="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_stock_spareparts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <TextView
                android:id="@+id/tv_pending_spareparts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:layout_gravity="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_stockMin_spareparts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Stock"

                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <TextView
                android:id="@+id/txtHargaJual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Jual"
                android:layout_gravity="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


        </TableRow>
    </TableLayout>
</android.support.v7.widget.CardView>