<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:padding="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:id="@+id/tv_noPart_jualPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. Part"
                        android:textColor="@color/grey_80"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_namaPart_jualPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="Nama Part"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/grey_80"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow android:layout_marginTop="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/tv_harga_jualPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/grey_80"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_jumlah_jualPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/grey_80"
                        android:layout_gravity="end"
                        android:textSize="12sp"/>

                </TableRow>

                <TableRow android:layout_marginTop="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/tv_disc_jualPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/grey_80"
                       android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_jualPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/grey_80"
                        android:layout_gravity="end"
                        android:textSize="12sp"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>