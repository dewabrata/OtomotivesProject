<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="5"
    android:padding="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="7dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/tv_no_ponsel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_ponsel"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/tv_nopol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_polisi"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="end"/>

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_expired_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expired_date"
                android:textSize="12sp"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/tv_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="end"/>

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tv_kategori_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kategori_discount"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="end"/>

        </TableRow>

        <TableRow
            android:visibility="gone"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_pekerjaan_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pekerjaan"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="start"/>

        </TableRow>


    </TableLayout>

</android.support.v7.widget.CardView>