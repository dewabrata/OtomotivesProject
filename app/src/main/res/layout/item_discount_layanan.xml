<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="5"
    android:padding="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="7dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:gravity="center"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/tv_paketLayanan_discLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paket_layanan"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_harga_discLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/harga"
                android:layout_gravity="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="12sp" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_pekerjaan_discLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pekerjaan"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="12sp"
                android:layout_gravity="start"/>

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_disc_discLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="12sp"
                android:layout_gravity="end"/>

        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>