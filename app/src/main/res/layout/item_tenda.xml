<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="5"
    android:padding="10dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/tv_namaLokasi_tenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lokasi"
                android:textSize="12sp"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

        </TableRow>

        <TableRow  android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_tipeWaktu_tenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Waktu"
                android:textSize="12sp"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_jamBuka_tenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Buka"
                android:textSize="12sp"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/tv_jamTutup_tenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Tutup"
                android:textSize="12sp"
                android:layout_gravity="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />


        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>