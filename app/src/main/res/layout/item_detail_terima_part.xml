<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="5"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/img_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:tint="@color/grey_80"
            app:srcCompat="@drawable/ic_close"
            android:layout_gravity="end"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="12dp"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:id="@+id/tv_merk_detailTerimaPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Merk"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_jumlah_detailTerimaPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Jumlah"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_namaPart_detailTerimaPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Nama Part"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_lokasi_detailTerimaPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Lokasi"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />


            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_noPart_detailTerimaPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="No. Part"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_folder_detailTerimaPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Folder"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </TableRow>

        </TableLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>