<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/txtNamaKaryawan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Nama Karywan"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/grey_900" />

        </TableRow>

        <TableRow android:layout_marginTop="@dimen/spacing_medium">

            <TextView
                android:id="@+id/txtNoPonsel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ponsel"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/grey_900" />

            <TextView
                android:id="@+id/txtPosisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posisi"
                android:layout_gravity="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/grey_900" />

        </TableRow>

        <TableRow android:layout_marginTop="@dimen/spacing_medium">

            <TextView
                android:id="@+id/tv_fungsiMekanik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fungsi Mekanik"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/grey_900" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_gravity="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/grey_900" />

        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>
