<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"

            app:toolbarId="@+id/toolbar">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_solid"
            tools:context=".modules.terima_part.DetailPartDiterima">

            <LinearLayout
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:text="No. PART" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:text="NAMA PART" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        android:text="JUMLAH" />

                    <EditText
                        android:id="@+id/txtJumlah"
                        android:layout_width="70sp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:text="HARGA BELI/UNIT" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:text="DISCOUNT BELI" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:text="LOKASI SIMPAN" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:text="PENEMPATAN" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtNoPart"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/txtNamaPart"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnScan"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:text="SCAN" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtHargaBeliUnit"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Rp." />

                <EditText
                    android:id="@+id/txtLokasiSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/editText13"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/txtPenempatan"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/btnTutup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginStart="20sp"
        android:layout_marginTop="40sp"
        android:background="@drawable/btn_rounded_accent"
        android:text="Tutup" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_tambah_detailpart_terima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="40sp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_add" />


</android.support.design.widget.CoordinatorLayout>