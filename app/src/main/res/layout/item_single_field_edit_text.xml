<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/btn_part_jasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription"
        android:drawableTop="@drawable/ic_tambah_part_resize"
        android:background="@drawable/state_textview_clickable"
        android:layout_gravity="center"
        android:text="@string/part_jasa_uppercase"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:id="@+id/cb_kondisi_baik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kondisi_baik_uppercase"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/paddingSemiLarge"
        android:layout_marginEnd="@dimen/paddingSemiLarge"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl_edit_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/paddingSemiLarge"
        android:layout_marginEnd="@dimen/paddingSemiLarge">

        <EditText
            android:id="@+id/et_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_gravity="top|left"
            android:textSize="14sp"
            android:maxLines="5"
            tools:ignore="Autofill,LabelFor,RtlHardcoded,TextFields" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:background="@drawable/btn_rounded_accent"
        android:text="@string/simpan_uppercase"
        android:textColor="@android:color/white"
        android:layout_marginStart="@dimen/paddingSemiLarge"
        android:layout_marginEnd="@dimen/paddingSemiLarge"/>



</LinearLayout>