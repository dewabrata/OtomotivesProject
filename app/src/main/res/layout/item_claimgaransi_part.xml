<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:foregroundGravity="center"
    app:layout_anchorGravity="center"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:stretchColumns="*"
        android:padding="10dp">

        <TableRow>

            <TextView
                android:id="@+id/tv_nopolisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Polosi"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tv_jenisKendaraan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kendaraan"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="end"/>

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_tgl_beli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TGL BELI"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/tv_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KM"
                android:layout_gravity="end"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>


        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_tgl_lkk_claim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TGL LKK CLAIM"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/tv_nama_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Part"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="end"/>

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_noPart_claim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Part"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="end"/>

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

        </TableRow>
    </TableLayout>
</android.support.v7.widget.CardView>