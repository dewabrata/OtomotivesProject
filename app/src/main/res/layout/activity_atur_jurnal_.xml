<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_atur_jurnal"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                </android.support.v7.widget.Toolbar>
            </FrameLayout>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/layout_penugasan"
            android:layout_width="348dp"
            android:layout_height="466dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_solid"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TANGGAL"
                        android:textStyle="bold" />

                    <android.support.design.widget.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:visibility="gone"
                        android:textAlignment="center"
                        android:id="@+id/tl_date">

                        <EditText
                            android:id="@+id/et_tanggal_jurnal"
                            android:gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:hint="TANGGAL" />


                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/btn_date_jurnal"
                        android:background="@drawable/ic_date"
                        android:layout_marginLeft="150dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="JENIS TRANSAKSI"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/sp_jenis_jurnal"
                        android:layout_width="180dp"
                        android:entries="@array/jenis_jurnal"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="POS"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/sp_pos_jurnal"
                        android:layout_width="190dp"
                        android:entries="@array/pos_jurnal"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />

                </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_ket_jurnal"
                            android:hint="Keterangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO. KONTAK"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_kontak_jurnal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="135dp"
                        android:background="@drawable/ic_contact_phone"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sewa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Periode Sewa"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />

                    <android.support.design.widget.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:id="@+id/tl_mulai_sewa">

                        <EditText
                            android:id="@+id/et_mulai_sewa"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:hint="Mulai"
                           android:gravity="center"/>


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tl_selesai_sewa"
                        >

                        <EditText
                            android:id="@+id/et_selesai_sewa"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="Selesai" />


                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/ly_btn_date_jurnal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_mulai_sewa"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/ic_date" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="16sp"
                            android:text="-" />

                        <Button
                            android:id="@+id/btn_selesai_sewa"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_date" />
                    </LinearLayout>


                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_nota_jurnal"
                        android:hint="NO. NOTA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_simpan_jurnal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_rounded_accent"
                android:text="SIMPAN"
                android:textColor="@color/white_transparency" />


        </LinearLayout>

    </LinearLayout>


</FrameLayout>