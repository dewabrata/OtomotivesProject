<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="5"
    android:padding="10dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="2dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/tv_jenis_layanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Jenis Layanan"
                android:textColor="@color/grey_900"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_nama_layanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Layanan"
                android:layout_gravity="start"
                android:textColor="@color/grey_900"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan Layanan"
                android:layout_gravity="start"
                android:textColor="@color/grey_900"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        </TableRow>


        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_lokasi_layanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textColor="@color/grey_900"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="start"/>

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_status_layanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_900"/>

            <TextView
                android:id="@+id/tv_biaya_layanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biaya"
                android:layout_gravity="end"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_900"/>

        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>