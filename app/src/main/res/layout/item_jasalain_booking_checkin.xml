<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <View
        android:id="@+id/tv_mark_tambah_jasa"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_gravity="start"
        android:background="@drawable/arrows_left"
        android:textStyle="bold"
        android:textColor="@color/red_900"
        android:textSize="17sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/img_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:background="@android:color/transparent"
            android:tint="@color/grey_80"
            app:srcCompat="@drawable/ic_close"
            card_view:ignore="ContentDescription,RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No. "
                android:paddingStart="@dimen/paddingMedium"
                android:textColor="@color/grey_900"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                card_view:ignore="RtlSymmetry"
                android:visibility="gone"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingSemiLarge"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:id="@+id/tv_kelompokPart_booking3_checkin3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="KELOMPOK PART"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_aktifitas_booking3_checkin3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="AKTIFITAS"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_jasaLainNet_booking3_checkin3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="JASA NET"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textSize="12sp" />

                </TableRow>

            </TableLayout>
        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>