<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="5"
    android:padding="10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/tv_tgl_biayaMekanik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_biayaMekanik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textStyle="bold" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_minBayar_biayaMekanik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Berbayar"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mekanik1_biayaMekanik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mekanik 1 (Rp)"
                android:textStyle="bold" />


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_mekanik2_biayaMekanik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mekanik 2 (Rp)"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mekanik3_biayaMekanik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mekanik 3 (Rp)"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>