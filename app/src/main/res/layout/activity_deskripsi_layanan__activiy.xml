<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAMA LAYANAN : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_namalayanan_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Nama Layanan"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JENIS LAYANAN : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_jenislayanan_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Jenis Layanan"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAMA PRINCIPAL : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_namaPrincipal_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Nama Principal"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PELAKSANA : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_pelaksana_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Pelaksana"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOKASI : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_lokasi_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Lokasi"
                        android:textStyle="bold" />

                </TableRow>


                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:src="@drawable/shape_line_solid"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KENDARAAN : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_kendaraan_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Kendaraan"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MERK : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_merk_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Merk"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MODEL : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_model_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Jenis Layanan"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JENIS : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_jenis_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Jenis"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VARIAN : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_varian_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Varian"
                        android:textStyle="bold" />

                </TableRow>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:src="@drawable/shape_line_solid"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BATASAN FASILITAS : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_batasFailitas_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Batasan Fasilitas"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BIAYA JASA : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_biayaJasa_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Biaya Jasa"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENGGANTIAN : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_penggantian_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Penggantian"
                        android:textStyle="bold" />

                </TableRow>


                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:src="@drawable/shape_line_solid"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GARANSI LAYANAN : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_garansiLayanan_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Garansi Layanan"
                        android:textStyle="bold" />

                </TableRow>


                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENGGANTIAN : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_penggantian2_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Penggantian"
                        android:textStyle="bold" />

                </TableRow>


                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EXPIRATION : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_ex_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Expiration"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/shape_line_solid"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvKetKendaraan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />


            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/shape_line_solid"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_margin="5dp">


                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WAKTU LAYANAN : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_waktuLayanan_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Waktu Layanan"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JENIS ANTRIAN : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_jenisAntrian_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Jenis Antrian"
                        android:textStyle="bold" />

                </TableRow>


                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FINAL INSPECTION : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_finalInspection_deskripsiLayanan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Final Inspection"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/shape_line_solid"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvKetJasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />


            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/shape_line_solid"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvKetPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/shape_line_solid"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_deskripsi_layanan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:minHeight="?attr/actionBarSize" />

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>