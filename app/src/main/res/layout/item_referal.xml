<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="5"
    android:padding="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:stretchColumns="*"
        android:padding="10dp">

        <TableRow>

            <TextView
                android:id="@+id/tv_namaBengkel_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Bengkel"
                android:textStyle="bold" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_namaPemilik_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pemilik"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_noPhone_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Ponsel"
                android:textStyle="bold" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_kodeRef_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Referal"
                android:textStyle="bold" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_tgl_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>