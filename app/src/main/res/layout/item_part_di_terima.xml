<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="5"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="12dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/tv_noPart_detailTerimaPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="No. Part"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_namaPart_detailTerimaPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Part"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tv_merk_detailTerimaPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Merk"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_jumlah_detailTerimaPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Jumlah"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/tv_harga_detailTerimaPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Harga"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_disc_detailTerimaPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Discount"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/tv_net_detailTerimaPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Net"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

        </TableRow>

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_lokasi_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/lokasi_part"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/tv_kode_folder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/no_folder"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

        </TableRow>


    </TableLayout>

</android.support.v7.widget.CardView>