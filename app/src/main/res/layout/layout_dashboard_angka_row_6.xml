<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/paddingSmall"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingEnd="20dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_dbKas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_rp_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp"
                    tools:ignore="TooManyViews" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/kas_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_dbColeection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_rp_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/kasir_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="20dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_dbBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_rp_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/bank_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/paddingSmall"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingEnd="20dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_total_saldo_epay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_rp_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp"
                    tools:ignore="TooManyViews" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/saldo_epay_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_total_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_rp_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/pending_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="20dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_total_part_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_rp_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/part_online_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingEnd="20dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_dbPiutang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_rp_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/piutang_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_dbStockpart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_rp_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/stock_part_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="20dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_total_asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_rp_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/asset_uppercase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
