<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_percent_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:text="NN.N%"
                android:textColor="@color/grey_80"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_down_or_up"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/tv_percent_values"
                android:src="@drawable/ic_up_arrow_statistik_resize"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tv_rp_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_tittle"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="@string/default_rp_uppercase"
                android:textAlignment="center"
                android:textColor="@color/grey_80"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tv_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:text="@string/checkin_uppercase"
                android:textAlignment="center"
                android:textColor="@color/grey_80"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

        </RelativeLayout>
        
        
    </android.support.v7.widget.CardView>

</FrameLayout>
