<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_master_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:padding="10dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="1dp">
            
            <TextView
                android:id="@+id/tv_nama_master_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAMA MASTER PART"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/grey_900"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />
            
            
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:stretchColumns="*">

                <!--            <ImageView-->
                <!--                android:id="@+id/img_cariPart"-->
                <!--                android:layout_margin="5dp"-->
                <!--                android:layout_width="50dp"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:layout_height="50dp"-->
                <!--                app:srcCompat="@drawable/ic_shopping_basket"/>-->


                <TableRow>

                    <TextView
                        android:id="@+id/tv_namaPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Nama Part"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_noPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Part"
                        android:textSize="12sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/tv_merkPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Merk Part"
                        android:textSize="12sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_gravity="end"/>

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_stockPart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:text="Stock"
                        android:layout_gravity="start"/>

                </TableRow>

            </TableLayout>

        </android.support.v7.widget.CardView>
        
    </LinearLayout>

</LinearLayout>