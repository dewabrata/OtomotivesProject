<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="5"
    android:padding="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/tv_nama_mekanik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="12sp"
                android:text="@string/nama_mekanik"
                android:layout_gravity="start"/>

        </TableRow>

        <TableRow android:layout_marginTop="@dimen/spacing_medium">

            <TextView
                android:id="@+id/tv_nama_pelanggan_nama_usaha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_pelanggan_nama_usaha"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="12sp"/>

        </TableRow>

        <TableRow android:layout_marginTop="@dimen/spacing_medium">

            <TextView
                android:id="@+id/tv_no_ponsel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/no_ponsel"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/tv_tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:layout_gravity="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="12sp"/>

        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>